#!/usr/bin/env python

import sys
import fiona
from shapely.geometry import mapping
from shapely.wkt import loads

infile = sys.argv[1]
outfile = sys.argv[2]

poly = loads(open(infile).read())

schema = {
        'geometry': 'Polygon',
        'properties': {'id': 'int'}
        }

with fiona.open(outfile, 'w', 'ESRI Shapefile', schema) as c:
    c.write({'geometry': mapping(poly), 'properties': {'id': 1}})

